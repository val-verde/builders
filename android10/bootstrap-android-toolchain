#!/bin/bash

wget -c ${ANDROID_NDK_URL}/${ANDROID_NDK_PACKAGE_NAME}-${BUILD_KERNEL}-${BUILD_PROCESSOR}.zip
unzip ${ANDROID_NDK_PACKAGE_NAME}-${BUILD_KERNEL}-${BUILD_PROCESSOR}.zip
mkdir -p .${PACKAGE_ROOT}
mv ${ANDROID_NDK_PACKAGE_NAME} .${PACKAGE_ROOT}
tar cf ${ANDROID_NDK_PACKAGE_NAME}.tar usr/
alien ${ANDROID_NDK_PACKAGE_NAME}.tar
