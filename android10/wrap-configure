#!/bin/bash

AS=${HOST_TRIPLE_SHORTENED}-as
AR=${HOST_TRIPLE_SHORTENED}-ar
CC=${HOST_TRIPLE}-clang
CPP="${CC} -E"
CXX=${CC}++
LD=${HOST_TRIPLE_SHORTENED}-ld
NM=${HOST_TRIPLE_SHORTENED}-nm
OBJDUMP=${HOST_TRIPLE_SHORTENED}-objdump
RANLIB=${HOST_TRIPLE_SHORTENED}-ranlib
STRIP=${HOST_TRIPLE_SHORTENED}-strip
STRINGS=${HOST_TRIPLE_SHORTENED}-strings

$@ AS=${AS} \
   AR=${AR} \
   CC=${CC} \
   CPP="${CPP}" \
   CXX=${CXX} \
   LD=${LD} \
   NM=${NM} \
   OBJDMP=${OBJDMP} \
   RANLIB=${RANLIB} \
   STRIP=${STRIP} \
   STRINGS=${STRINGS}     