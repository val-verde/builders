#!/bin/bash

set -e

# Set all environment vars
export SOURCE_PACKAGE_NAME=spirv-tools
export SOURCE_PACKAGE_VERSION=9999-git
export SOURCE_ROOT=/sources/${SOURCE_PACKAGE_NAME}

# Source package build helper functions
source /sources/${VAL_VERDE_GH_TEAM}-platform-sdk-bash-source-scripts

# Configure the build components
GIT_URL="https://github.com/KhronosGroup/${SOURCE_PACKAGE_NAME}.git" \
git-clone master

cd ${STAGE_ROOT}
package-cmake \
    -DPYTHON_EXECUTABLE=${BUILD_PACKAGE_PREFIX}/bin/python3 \
    -DSPIRV-Headers_SOURCE_DIR=${PACKAGE_PREFIX} \
    ${SOURCE_ROOT}

# Build the components
ninja-build

# Build the package
deb-package-build

# Install the package
deb-package-install
