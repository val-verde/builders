#!/bin/bash

set -e

# Set all environment vars
export SOURCE_PACKAGE_NAME=bzip2
export SOURCE_PACKAGE_VERSION=1.0.8

# Source package build helper functions
source /usr/libexec/${VAL_VERDE_GH_TEAM}-platform-sdk-bash-source-scripts

export-compiler-environment
generate-compiler-tools

# Determine source branch
if [ "${HOST_OS}" = "mingw32" ]; then
    SOURCE_ROOT=${SOURCE_ROOT}-windows
else
    SOURCE_ROOT=${SOURCE_ROOT}
fi

# Configure the build components
copy-source-to-staging

# Build the components
cd ${STAGE_ROOT}
${MAKE} \
    AR=${AR} \
    CC=${CC} \
    CFLAGS="${CFLAGS}" \
    PREFIX=${INSTALL_PREFIX} \
    RANLIB=${RANLIB} \
    install

# Build the package
deb-package-build

# Install the package
deb-package-install
