#!/bin/bash

set -e

QUALIFIED_PROCESSOR=${HOST_PROCESSOR/"x86_64"/"x86-64"}
SYSROOT=${SYSROOT:-${PACKAGE_ROOT}/${PACKAGE_BASE_NAME}-platform-sdk-${HOST_OS}${HOST_OS_API_LEVEL}-${HOST_CPU}-${QUALIFIED_PROCESSOR}/sysroot}

${BUILD_PACKAGE_PREFIX}/bin/clang \
    --sysroot=${SYSROOT} \
    --target=${HOST_TRIPLE} \
    "$@"
