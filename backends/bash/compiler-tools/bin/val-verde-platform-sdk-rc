#!/bin/bash

set -e

args=("$@")
BINDIR=${BINDIR:-${BUILD_PACKAGE_PREFIX}/bin}
TEMP_FILE=`mktemp`

for ((i=0; i<"${#args[@]}"; ++i)); do
    case ${args[i]} in
    -i)
        IN_FILE=${args[i+1]}
        i=$((i+1))
        ;;
    -o|/fo|/Fo)
        OUT_FILE=${args[i+1]}
        i=$((i+1))
        ;;
    -D)
        DEFINE=`${ECHO} ${args[i+1]} | ${XARGS}`
        OTHER_FLAGS="${OTHER_FLAGS} -D${DEFINE}"
        i=$((i+1))
        ;;
    -I|--include)
        INCLUDE=`${ECHO} ${args[i+1]} | ${XARGS}`
        INCLUDES="${INCLUDES} -I${INCLUDE}"
        i=$((i+1))
        ;;
    -I*)
        INCLUDES="${INCLUDES} ${args[i]}"
        ;;
    --preprocessor-arg=*)
        ;;
    --target*)
        ;;
    *.rc)
        IN_FILE=${args[i]}
        ;;
    -*)
        OTHER=`${ECHO} ${args[i]} | ${XARGS}`
        OTHER_FLAGS="${OTHER_FLAGS} ${OTHER}"
        ;;
    *)
        OUT_FILE=${args[i]}
        ;;
    esac
done

${BINDIR}/${VAL_VERDE_GH_TEAM}-platform-sdk-gcc-mingw32 \
    -E \
    -DRC_INVOKED \
    -xc \
    ${INCLUDES} \
    ${OTHER_FLAGS} \
    ${IN_FILE} \
    -o ${TEMP_FILE}
 ${TR} -cd '\11\12\15\40-\176' \
       < ${TEMP_FILE} \
       > ${TEMP_FILE}.rc

${BINDIR}/llvm-rc \
    ${INCLUDES} \
    ${TEMP_FILE}.rc \
    -fo ${TEMP_FILE}.res

${RM} ${TEMP_FILE}.rc
${MV} ${TEMP_FILE}.res \
      ${OUT_FILE}
