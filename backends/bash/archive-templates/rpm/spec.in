Name:       PACKAGE_NAME
Version:    VERSION
Release:    1
Summary:    PACKAGE_NAME source rpm
License:    Apache
BuildArch:  BUILD_PROCESSOR

%description
PACKAGE_NAME source rpm for SYSTEM_ARCH

%prep
cd ARCHIVE_ROOT/BUILD
rm -rf PACKAGE_NAME-%{version}
cp -rf ARCHIVE_ROOT/SOURCES/PACKAGE_NAME ./PACKAGE_NAME-%{version}
cd PACKAGE_NAME-%{version}
/usr/bin/chmod -Rf a+rX,u+w,g-w,o-w .

%build

%install
mkdir -p ARCHIVE_ROOT/BUILDROOT/PACKAGE_NAME-%{version}-RELEASE.BUILD_PROCESSOR
cp -r ARCHIVE_ROOT/BUILD/PACKAGE_NAME-%{version}/* ARCHIVE_ROOT/BUILDROOT/PACKAGE_NAME-%{version}-RELEASE.BUILD_PROCESSOR/

%files

%clean
mv ARCHIVE_ROOT/RPMS/BUILD_PROCESSOR/PACKAGE_NAME-%{version}-RELEASE.BUILD_PROCESSOR.rpm ARCHIVE_ROOT/RPMS/BUILD_PROCESSOR/PACKAGE_NAME.rpm 

%changelog
