#!/bin/bash

set -e

# Set all environment vars
export SOURCE_PACKAGE_NAME=icu4c
export SOURCE_PACKAGE_VERSION=68

# Source package build helper functions
source /usr/libexec/${VAL_VERDE_GH_TEAM}-platform-sdk-builder-utils

# Configure the build components
cd ${STAGE_ROOT}

package-configure \
    ${SOURCE_ROOT}/${SOURCE_PACKAGE_NAME}/source/configure \
    --disable-extras \
    --disable-samples \
    --disable-static \
    --disable-tests \
    --disable-tools \
    --enable-shared \
    --with-cross-build=${STAGE_ROOT_BASE}/${SOURCE_PACKAGE_NAME}-${BUILD_OS}${BUILD_OS_API_LEVEL}-${BUILD_ARCH} \
    --with-library-suffix=swift

# Build the components
make-install

# RPATH fixups
COMPONENTS="\
    ${INSTALL_PREFIX}/lib/libicudataswift.so \
    ${INSTALL_PREFIX}/lib/libicui18nswift.so \
    ${INSTALL_PREFIX}/lib/libicuioswift.so \
    ${INSTALL_PREFIX}/lib/libicuucswift.so \
" \
rpath-fixup

# Build the package
deb-package-build

# Install the package
deb-package-install
