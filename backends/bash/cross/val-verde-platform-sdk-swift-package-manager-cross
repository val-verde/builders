#!/bin/bash

set -x -e

# Set all environment vars
export SOURCE_PACKAGE_NAME=swift-package-manager
export SOURCE_PACKAGE_VERSION=5

# Source package build helper functions
source /usr/libexec/${VAL_VERDE_GH_TEAM}-platform-sdk-builder-utils

export DEPENDS="\
    ${PACKAGE_BASE_NAME}-protobuf-3-${HOST_OS}${HOST_OS_API_LEVEL}-${HOST_ARCH} (>=1.0.0), \
    ${PACKAGE_BASE_NAME}-swift-5-${HOST_OS}${HOST_OS_API_LEVEL}-${HOST_ARCH} (>=1.0.0), \
    ${PACKAGE_BASE_NAME}-swift-corelibs-foundation-5-${HOST_OS}${HOST_OS_API_LEVEL}-${HOST_ARCH} (>=1.0.0) \
"

# Build the components
cd ${SOURCE_ROOT}
SWIFT_BUILD_FLAGS="
    -Xlinker -lc++ \
    -Xlinker -licuucswift \
    -Xlinker -lncurses \
" \
package-swift-build

if [ "${HOST_OS}" = "gnu" ]; then
    SDK_PLATFORM_DIR="linux"
elif [ "${HOST_OS}" = "macos" ]; then
    SDK_PLATFORM_DIR="macosx"
elif [ "${HOST_OS}" = "mingw32" ]; then
    SDK_PLATFORM_DIR="windows"
else
    SDK_PLATFORM_DIR=${HOST_OS}
fi

cd ${STAGE_ROOT}
${MKDIR} -p ${INSTALL_PREFIX}/lib/swift/${SDK_PLATFORM_DIR}/
package-rsync -ax \
              release/Package*.swiftdoc \
              release/Swift*.swiftdoc \
              ${INSTALL_PREFIX}/lib/swift/${SDK_PLATFORM_DIR}/
package-rsync -ax \
              release/Package*.swiftmodule \
              release/Swift*.swiftmodule \
              ${INSTALL_PREFIX}/lib/swift/${SDK_PLATFORM_DIR}/
package-rsync -ax \
              release/`package-get-filename package-info EXECUTABLE HOST` \
              release/`package-get-filename swift-build EXECUTABLE HOST` \
              release/`package-get-filename swift-package EXECUTABLE HOST` \
              release/`package-get-filename swift-run EXECUTABLE HOST` \
              release/`package-get-filename swift-test EXECUTABLE HOST` \
              release/`package-get-filename swift-test EXECUTABLE HOST` \
              release/`package-get-filename swiftpm-xctest-helper EXECUTABLE HOST` \
              ${INSTALL_PREFIX}/bin/
package-rsync -ax \
              release/`package-get-filename PackageDescription SHARED HOST` \
              release/`package-get-filename PackagePlugin SHARED HOST` \
              release/`package-get-filename SwiftPM SHARED HOST` \
              release/`package-get-filename SwiftPMDataModel SHARED HOST` \
              ${INSTALL_PREFIX}/lib/

# Build and install the package
package-invoke-archive-install
