#!/bin/bash

set -e

# Set all environment vars
export SOURCE_PACKAGE_NAME=xcb-pthread-stubs
export SOURCE_PACKAGE_VERSION=0.4.0

# Source package build helper functions
source /usr/libexec/${VAL_VERDE_GH_TEAM}-platform-sdk-bash-source-scripts

# Configure the build components
copy-source-to-staging

cd ${STAGE_ROOT}
package-configure \
    ${STAGE_ROOT}/autogen.sh \
    --disable-static \
    --enable-shared

# Build the components
make-install

# Build the package
deb-package-build

# Build the package
deb-package-install
