#!/bin/bash

set -e

# Set all environment vars
export SOURCE_PACKAGE_NAME=python
export SOURCE_PACKAGE_VERSION=9999-git

# Source package build helper functions
source /usr/libexec/${VAL_VERDE_GH_TEAM}-platform-sdk-bash-source-scripts

export DEPENDS="\
    ${PACKAGE_BASE_NAME}-bzip2-${HOST_OS}${HOST_OS_API_LEVEL}-${HOST_ARCH} (>=1.0.0), \
    ${PACKAGE_BASE_NAME}-libffi-${HOST_OS}${HOST_OS_API_LEVEL}-${HOST_ARCH} (>=1.0.0), \
    ${PACKAGE_BASE_NAME}-openssl-${HOST_OS}${HOST_OS_API_LEVEL}-${HOST_ARCH} (>=1.0.0), \
    ${PACKAGE_BASE_NAME}-ncurses-${HOST_OS}${HOST_OS_API_LEVEL}-${HOST_ARCH} (>=1.0.0), \
    ${PACKAGE_BASE_NAME}-sqlite-${HOST_OS}${HOST_OS_API_LEVEL}-${HOST_ARCH} (>=1.0.0), \
    ${PACKAGE_BASE_NAME}-util-linux-${HOST_OS}${HOST_OS_API_LEVEL}-${HOST_ARCH} (>=1.0.0), \
    ${PACKAGE_BASE_NAME}-xz-${HOST_OS}${HOST_OS_API_LEVEL}-${HOST_ARCH} (>=1.0.0) \
"

# Configure the build components
cd ${STAGE_ROOT}

export _PYTHON_PROJECT_BASE=${STAGE_ROOT}
export CFLAGS="\
    -I${PACKAGE_PREFIX}/include/ncurses \
    -I${PACKAGE_PREFIX}/include/uuid \
    ${CFLAGS} \
"
export CPPFLAGS="\
    -I${PACKAGE_PREFIX}/include/ncurses \
    -I${PACKAGE_PREFIX}/include/uuid \
    ${CPPFLAGS} \
"
export CXXFLAGS="\
    -I${PACKAGE_PREFIX}/include/ncurses \
    -I${PACKAGE_PREFIX}/include/uuid \
    ${CXXFLAGS} \
"
export LIBS="\
    -lexpat \
    ${LIBS} \
"
export OPENSSL_LIBS=`echo "\
    -lcrypto \
    -lssl \
" | xargs`

package-configure \
    ${SOURCE_ROOT}/configure \
    ac_cv_buggy_getaddrinfo=no \
    ac_cv_file__dev_ptc=no \
    ac_cv_file__dev_ptmx=yes \
    --enable-shared \
    --with-ensurepip=yes \
    --with-openssl=${PACKAGE_PREFIX} \
    --with-system-expat \
    --with-system-ffi

# Build the components
make-build

ln -sf \
   python3 \
   ${INSTALL_PREFIX}/bin/python

# Build the package
deb-package-build

# Install the package
deb-package-install
