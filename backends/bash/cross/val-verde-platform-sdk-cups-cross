#!/bin/bash

set -e

# Set all environment vars
export SOURCE_PACKAGE_NAME=cups
export SOURCE_PACKAGE_VERSION=2.3.3

# Source package build helper functions
source /usr/libexec/${VAL_VERDE_GH_TEAM}-platform-sdk-bash-source-scripts

# Configure the build components
copy-source-to-staging

cd ${STAGE_ROOT}
if [ "${HOST_OS}" = "gnu" ]; then
    ENABLE_OR_DISABLE_SYSTEMD=enable
else
    ENABLE_OR_DISABLE_SYSTEMD=disable
fi

package-configure \
    ${STAGE_ROOT}/configure \
    --disable-static \
    --enable-shared \
    --${ENABLE_OR_DISABLE_SYSTEMD}-systemd

# Build the components
make-install

# Build the package
deb-package-build

# Build the package
deb-package-install
