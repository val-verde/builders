#!/bin/bash

set -e

# Set all environment vars
export SOURCE_PACKAGE_NAME=libcap
export SOURCE_PACKAGE_VERSION=2.45

# Source package build helper functions
source /usr/libexec/${VAL_VERDE_GH_TEAM}-platform-sdk-bash-source-scripts

export-compiler-environment
generate-compiler-tools

# Configure the build components
copy-source-to-staging

cd ${STAGE_ROOT}

# Build the components
TARGETS=`echo "\
    lib=lib \
    prefix=/ \
    AR=${AR} \
    BUILD_CC=${BUILD_CC} \
    CC=${CC} \
    DESTDIR=${INSTALL_PREFIX} \
    install \
" | xargs`

TARGETS="${TARGETS} -C ${STAGE_ROOT}/libcap" \
make-build

TARGETS="${TARGETS} -C ${STAGE_ROOT}/progs" \
make-build

# Build the package
deb-package-build

# Install the package
deb-package-install
