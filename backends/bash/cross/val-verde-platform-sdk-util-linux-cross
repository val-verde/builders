#!/bin/bash

set -e

# Set all environment vars
export SOURCE_PACKAGE_NAME=util-linux
export SOURCE_PACKAGE_VERSION=2.36.1

# Source package build helper functions
source /usr/libexec/${VAL_VERDE_GH_TEAM}-platform-sdk-bash-source-scripts

export DEPENDS="\
    ${PACKAGE_BASE_NAME}-bash-${HOST_OS}${HOST_OS_API_LEVEL}-${HOST_ARCH} (>=1.0.0), \
    ${PACKAGE_BASE_NAME}-ncurses-${HOST_OS}${HOST_OS_API_LEVEL}-${HOST_ARCH} (>=1.0.0), \
    ${PACKAGE_BASE_NAME}-zlib-${HOST_OS}${HOST_OS_API_LEVEL}-${HOST_ARCH} (>=1.0.0) \
"

# Configure the build components
cd ${STAGE_ROOT}
package-configure \
    ${SOURCE_ROOT}/configure \
    ac_cv_func_setns=yes \
    ac_cv_func_unshare=yes \
    --disable-all-programs \
    --disable-bash-completion \
    --disable-static \
    --enable-libblkid \
    --enable-libmount \
    --enable-libuuid \
    --enable-shared

# Build the package
make-install

# Build the package
deb-package-build

# Install the package
deb-package-install
