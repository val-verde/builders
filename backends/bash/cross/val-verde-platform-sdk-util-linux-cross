#!/bin/bash

set -e

# Set all environment vars
export SOURCE_PACKAGE_NAME=util-linux
export SOURCE_PACKAGE_VERSION=2

# Source package build helper functions
source /usr/libexec/${VAL_VERDE_GH_TEAM}-platform-sdk-builder-utils

export DEPENDS="\
    ${PACKAGE_BASE_NAME}-ncurses-6-${HOST_OS}${HOST_OS_API_LEVEL}-${HOST_ARCH} (>=1.0.0), \
    ${PACKAGE_BASE_NAME}-zlib-1-${HOST_OS}${HOST_OS_API_LEVEL}-${HOST_ARCH} (>=1.0.0) \
"

# Invoke one-shot template for configure/install
if [ -z "${DISABLE_PYTHON}" ]; then
    ENABLE_OR_DISABLE_PYTHON=enable
else
    ENABLE_OR_DISABLE_PYTHON=disable
fi

if [ -z "${DISABLE_SYSTEMD}" ]; then
    ENABLE_OR_DISABLE_SYSTEMD=enable
else
    ENABLE_OR_DISABLE_SYSTEMD=disable
fi

if [ "${HOST_OS}" = "macos" ]; then
    ENABLE_OR_DISABLE_LIBMOUNT=disable
else
    ENABLE_OR_DISABLE_LIBMOUNT=enable
fi

DISABLE_AUTOUPDATE=TRUE \
NCURSES_CFLAGS="-I${PACKAGE_PREFIX}/include" \
NCURSES_LDFLAGS="-L`package-get-path ncursesw SHARED HOST`" \
NCURSESW6_CONFIG=${PACKAGE_PREFIX}/bin/`package-get-filename ncursesw6-config EXECUTABLE` \
PYTHON_CFLAGS=${PACKAGE_PREFIX}/include/python3.9 \
PYTHON_LDFLAGS="-L`package-get-path ncursesw SHARED HOST`" \
SYSTEMD_CFLAGS=${PACKAGE_PREFIX}/include \
SYSTEMD_LDFLAGS="-L`package-get-path systemd SHARED HOST`" \
package-configure-install-archive \
    ac_cv_func_setns=yes \
    ac_cv_func_unshare=yes \
    --disable-all-programs \
    --disable-bash-completion \
    --disable-static \
    --enable-libblkid \
    --enable-libuuid \
    --enable-shared \
    --with-ncursesw \
    --${ENABLE_OR_DISABLE_LIBMOUNT}-libmount \
    --${ENABLE_OR_DISABLE_PYTHON}-python \
    --${ENABLE_OR_DISABLE_SYSTEMD}-systemd
