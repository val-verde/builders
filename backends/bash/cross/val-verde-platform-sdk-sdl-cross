#!/bin/bash

set -e

# Set all environment vars
export SOURCE_PACKAGE_NAME=sdl
export SOURCE_PACKAGE_VERSION=2

# Source package build helper functions
source /usr/libexec/${VAL_VERDE_GH_TEAM}-platform-sdk-builder-utils

export DEPENDS="${PACKAGE_BASE_NAME}-vulkan-loader-1-${HOST_OS}${HOST_OS_API_LEVEL}-${HOST_ARCH} (>=1.0.0)"

# Invoke one-shot template for cmake/install
if [ "${HOST_OS}" = "android" ]; then
    CMAKE_ANDROID_DEFINE_CMD="-DANDROID=1"
fi

if [ "${HOST_OS}" != "gnu" ]; then
    export COMMON_LDFLAGS="\
        -liconv \
        ${COMMON_LDFLAGS} \
    "
fi

CMAKE_STAGE_ROOT=${STAGE_ROOT}/build
${MKDIR} -p ${CMAKE_STAGE_ROOT}

package-cmake-install-archive \
    -DOpenGLES1_LIBRARY=`package-get-path GLESv1_CM SHARED HOST` \
    -DOpenGLES2_LIBRARY=`package-get-path GLESv2 SHARED HOST` \
    ${CMAKE_ANDROID_DEFINE_CMD}