#!/bin/bash

set -e

# Source package build helper functions
export CONFIGURE_HOST_TRIPLE=${HOST_PROCESSOR}-${HOST_KERNEL}-${DARWIN_OS}${DARWIN_OS_API_LEVEL}
export SYSROOT=${SOURCE_ROOT_BASE}/macosx-${HOST_OS_API_LEVEL}
source /usr/libexec/${VAL_VERDE_GH_TEAM}-platform-sdk-builder-api
source /usr/libexec/${VAL_VERDE_GH_TEAM}-platform-sdk-builder-utils

# libcxx build
package-invoke-builder libcxx-bootstrap 13

# llvm dependencies
category-invoke-builder llvm-dependencies-darwin

# swift tools build
package-invoke-builder swift-tools-darwin

# swift sdk build
# category-invoke-builder swift-sdk-cross

# go build
package-invoke-builder go-cross 1

# ruby build
package-invoke-builder ruby-cross 3

# graphics sdk build
category-invoke-builder graphics-sdk-cross

# virtualization sdk build
category-invoke-builder virtualization-sdk-cross

# node + sdk build
# package-invoke-builder node-cross 16
# package-invoke-builder npm-yarn-cross 1

# blockchain sdk build
category-invoke-builder blockchain-sdk-cross
